#include <CAN.h>

void setup() {
  Serial.begin(115200);
  
  // Initialize CAN at 500 kbps
  if (!CAN.begin(500E3)) {
    Serial.println("CAN initialization failed!");
    while (1);
  }
  Serial.println("CAN initialized.");
}

void loop() {
  // Prepare an 8-byte array for the CAN message
  byte data[8] = {0}; // Initialize all bytes to 0
  
  // ESP32-1 will fill byte 0 with its data
  data[0] = 42; // Example data for ESP32-1
  
  // Send the 8-byte message with a CAN ID of 0x100
  if (CAN.write(0x100, data, 8)) {
    Serial.println("Message sent");
  } else {
    Serial.println("Error sending message");
  }
  
  delay(1000); // Adjust the delay to control message sending rate
}



#include <CAN.h>

void setup() {
  Serial.begin(115200);
  
  // Initialize CAN at 500 kbps
  if (!CAN.begin(500E3)) {
    Serial.println("CAN initialization failed!");
    while (1);
  }
  Serial.println("CAN initialized.");
}

void loop() {
  // Check if a new CAN message is available
  if (CAN.parsePacket()) {
    Serial.print("Received packet with ID: ");
    Serial.println(CAN.packetId(), HEX);  // Print CAN ID
    
    // Print all 8 bytes of data in the received CAN frame
    while (CAN.available()) {
      byte receivedByte = CAN.read();
      Serial.print(receivedByte);
      Serial.print(" ");
    }
    Serial.println();
  }
}











